= javascript_pack_tag 'auto', 'data-turbolinks-track': 'reload'
= stylesheet_link_tag 'memberships'

.container
    .row.justify-content-md-center
        .col-md-6
            .input-group.input-group-sm
                %input.form-control{"data-search": "template-search", tabindex: "0", type: "text", id: "autoComplete"}/
                %input{type: "hidden", value: memberships_create_path(@board), id: "addMembershipURL"}
            %ul.list-group.search-list.show#show-users

-# #flash-box            
-#     - flash.each do |name, message|
-#         #toast-container.toast-container.toast-top-right
-#             #fast-duration.toast{class: "toast-#{name}", "aria-live": "assertive", style: "display: block;" }
-#                 .toast-message= message


%h1 Board
%p= @board.title
%p= @board.description

#user-section
    %ul
    - @board.users.each do |user|
        %div.mb-2
            - if user.administrated_boards.exists?(@board.id)
                .checkbox.checkbox-danger.checkbox-glow
                    %input#checkboxGlow4{:checked => "checked", :type => "checkbox"}/
                    %label{:for => "checkboxGlow4"}= user.email
            - else
                .checkbox.checkbox-danger.checkbox-glow
                    %p= user.email
                    = link_to 'Make Admin', add_admin_rights_path(id: @board.id, user_id: user.id), class: "btn btn-dark shadow mr-1 mb-1", id: "#{user.email}", remote: true, :onclick => 'makeAdmin(event)'


<script src="https://cdn.jsdelivr.net/npm/@tarekraafat/autocomplete.js@7.2.0/dist/js/autoComplete.min.js"></script> 