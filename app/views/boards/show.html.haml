%h2= @board.title

%h3	Create by:
= link_to @board.user.email, user_path(@board.user_id)

%h3 Description:
%p= @board.description
= link_to 'Edit', edit_board_path(@board)
= link_to 'Destroy', @board, method: :delete,
                                  data: { confirm: "You sure?" }

= link_to 'Back', boards_path
= form_tag users_index_url, method: :get, class: "navbar-form navbar-right", role: "search" do
    = text_field_tag :search, params[:search], class: "form-control"
    = submit_tag "Search", name: nil, class: "btn btn-default"
= javascript_pack_tag 'auto', 'data-turbolinks-track': 'reload'

.container
    .row.justify-content-md-center
        .col-md-6
            .input-group.input-group-sm
                %input.form-control{"data-search" => "template-search", :tabindex => "0", :type => "text", id: "autoComplete"}/
                %input{type: "hidden", value: memberships_create_path(@board), id: "addMembershipURL"}
            %ul.list-group.search-list.show#show-users

#flash-box
    - flash.each do |name, message|
        .toast-container.toast-top-right#toast-container
            .toast.toast-error{"aria-live" => "assertive", :style => "display: block;"}
                .toast-title= name
                .toast-message= message

