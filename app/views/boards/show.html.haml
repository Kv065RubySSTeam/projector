%h2= @board.title

%h3	Create by:
= link_to @board.user.email, user_path(@board.user_id)

%h3 Description:
%p= @board.description
= link_to 'Edit', edit_board_path(@board)
= link_to 'Destroy', @board, method: :delete,
                                  data: { confirm: "You sure?" }

= link_to 'Back', boards_path
= form_tag users_index_url, method: :get, class: "navbar-form navbar-right", role: "search" do
    = text_field_tag :search, params[:search], class: "form-control"
    = submit_tag "Search", name: nil, class: "btn btn-default"

%h1 Board
%p= @board.title
%p= @board.description
%p= @board.public

- @board.users.each do |user|
    %p Email:
    =user.email
